VPATH=%VPATH%

RUSTC ?= rustc
RUSTFLAGS ?=

RUST_SRC=$(shell find $(VPATH)/. -type f -name '*.rs')

.PHONY: all clean
all:	librustcoregraphics.dummy

librustcoregraphics.dummy: lib.rs $(RUST_SRC)
	$(RUSTC) $(RUSTFLAGS) $< --lib --out-dir .
	touch $@

rustcoregraphics-test: lib.rs $(RUST_SRC)
	$(RUSTC) $(RUSTFLAGS) $< -o $@ --test

check: rustcoregraphics-test
	./rustcoregraphics-test

clean:
	rm -f *.o *.a *.so *.dylib *.dll *.dummy rustcoregraphics-test

